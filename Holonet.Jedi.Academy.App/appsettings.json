{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "SiteConfiguration": {
        "SiteSettings": {
            "SessionTimeout": 20,
            "SessionCookieName": ".JediAcademyApp.Session",
            "HttpOnly": true,
            "PageSize": 10,
            "CommonLongDateFormat": "yyyy/MM/dd HH:mm:ss",
            "CommonShortDateFormat": "yyyy/MM/dd",
            "GridTimestampFormat2": "HH:mm:ss"
        },
        "MailSettings": {
            "Enabled": false,
            "Host": "",
            "Port": 587,
            "EnableSsl": true,
            "SendAsHtml": true,
            "Sender": "",
            "SenderPassword": "",
            "UseDefaultCredentials": true
        },
        "AzCommSvcSettings": {
            "Enabled": true,
            "ConnectionString": "",
            "Sender": ""
        },
        "ApplicationInformation": {
            "ApplicationName": "Jedi Academy",
            "ApplicationVersion": "1.0",
            "BuildNumber": "1.0",
            "SystemLabel": "",
            "ReleaseLabel": "",
            "ReleaseDate": "01 March 3045"
        },
        "ContactInformation": {
            "Name": "Jedi Academy Support",
            "HolonetAddress": "HolonetJediAcademySupport@outlook.com"
        },
        "DbConnectionStrings": {
            "JediAcademyAppDB": ";"
        },
        "IdentityPlatform": {
            "CookieExpiresInMinutes": 20,
            "Signin": {
                "RequireConfirmedEmail": true,
                "EnableLockouts": false
            },
            "Password": {
                "RequireDigit": true,
                "RequireLowercase": true,
                "RequireNonAlphanumeric": true,
                "RequireUppercase": true,
                "RequiredLength": 6,
                "RequiredUniqueChars": 1
            },
            "Lockout": {
                "AllowedForNewUsers": true,
                "DefaultLockoutMinutes": 5,
                "MaxFailedAccessAttempts": 5
            },
            "User": {
                "RequireUniqueEmail": true,
                "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+"
            }
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": ";"
    }
