@page
@model Holonet.Jedi.Academy.App.Pages.Experience.EditModel

@{
	ViewData["Title"] = "Edit Experience";
}

<h1>Edit An Existing Experience</h1>
<hr />

<div class="row">
	<div class="col-md-6">
		<form method="post">
			<div class="card">
				<div class="card-body">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Knowledge.Id" />
					<div class="mb-3">
						<label asp-for="Knowledge.Name" class="control-label"></label>
						<input asp-for="Knowledge.Name" class="form-control" />
						<span asp-validation-for="Knowledge.Name" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Knowledge.ExperienceToGain" class="control-label"></label>
						<input asp-for="Knowledge.ExperienceToGain" class="form-control" />
						<span asp-validation-for="Knowledge.ExperienceToGain" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Knowledge.Description" class="control-label"></label>
						<textarea asp-for="Knowledge.Description" class="form-control expandable"></textarea>
						<span asp-validation-for="Knowledge.Description" class="text-danger"></span>
					</div>
					<p class="fst-italic">Archived items are retained, but they are no longer actionable or listed.</p>
					<div class="mb-3">
						<div class="form-check">
							<input asp-for="Knowledge.Archived" type="checkbox" class="form-check-input" />
							<label asp-for="Knowledge.Archived" class="form-check-label"></label>
						</div>
						<span asp-validation-for="Knowledge.Archived" class="text-danger"></span>
					</div>
				</div>
				<div class="card-footer">
					<input type="submit" value="Update" class="btn btn-primary" /> |
					<a asp-page="./Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
		<script type="text/javascript" src="~/lib/plugins/jquery-autosize/jquery.autosize.min.js"></script>
	<script type="text/javascript" src="~/js/Experiences/common.js" asp-append-version="true"></script>
}
