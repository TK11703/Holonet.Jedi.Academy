@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["PageName"] = "Register";
    ViewData["PageDescription"] = "Web administrators may create an account to access the resources.";
    Layout = "/Pages/Shared/_IdentityMinimalLayout.cshtml";
}
<form class="p-4 p-md-5 border rounded-3 bg-light" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Register a new account</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <a href="/index" class="btn btn-secondary btn-sm">Cancel</a>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
