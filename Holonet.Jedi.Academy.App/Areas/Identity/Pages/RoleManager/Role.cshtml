@page
@model Holonet.Jedi.Academy.App.Areas.Identity.Pages.RoleManager.RoleModel
@{
    ViewData["Title"] = "Role Details";
    ViewData["PageName"] = "Role Details";
    ViewData["PageDescription"] = "Edit the role information.";
    Layout = "_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="mb-3 text-left">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-4">
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="/Identity/RoleManager/Index" class="btn btn-secondary btn-sm" title="Click to cancel this operation.">Cancel</a>
                    </div>
                </div>
                
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>