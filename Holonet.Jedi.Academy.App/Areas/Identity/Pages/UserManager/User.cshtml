@page
@model Holonet.Jedi.Academy.App.Areas.Identity.Pages.UserManager.UserModel
@{
    ViewData["Title"] = "User Details";
    ViewData["PageName"] = "User Details";
    ViewData["PageDescription"] = "Review the role information.";
    Layout = "_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Manage User Roles</h2>
                    Add/Remove Roles for User (@ViewData["UserName"]).
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.UserRoleAssignment.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.UserRoleAssignment[i].RoleId" />
                            <input type="hidden" asp-for="@Model.UserRoleAssignment[i].RoleName" />
                            <input asp-for="@Model.UserRoleAssignment[i].Selected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.UserRoleAssignment[i].Selected">
                                @Model.UserRoleAssignment[i].RoleName
                            </label>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a href="/Identity/UserManager/Index" class="btn btn-secondary btn-sm" title="Click to cancel this operation.">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>